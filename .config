CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_GRUB_IMAGES=y
CONFIG_GRUB_EFI_IMAGES=y

# ==========================================
# --- [⚠️ 暴力植入组] 强制选中 ---
# ==========================================

# 1. iStore (linkease源码)
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_luci-lib-taskd=y
CONFIG_PACKAGE_luci-lib-xterm=y

# 2. Docker 面板 (lisaac源码)
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_luci-app-dockerman=y
# 强制 Dockerman 汉化
CONFIG_PACKAGE_luci-i18n-dockerman-zh-cn=y

# 3. Tailscale (asvow源码)
CONFIG_PACKAGE_luci-app-tailscale=y
# 强制 Tailscale 汉化
CONFIG_PACKAGE_luci-i18n-tailscale-zh-cn=y
CONFIG_PACKAGE_tailscale=y
CONFIG_PACKAGE_iptables-mod-nat-extra=y

# 4. AdGuardHome (rufengsuixing源码)
CONFIG_PACKAGE_luci-app-adguardhome=y
# 强制 ADG 汉化
CONFIG_PACKAGE_luci-i18n-adguardhome-zh-cn=y

# 5. QModem & SMS (FUjr/4IceG源码)
CONFIG_PACKAGE_luci-app-qmodem=y
CONFIG_PACKAGE_luci-i18n-qmodem-zh-cn=y
CONFIG_PACKAGE_luci-app-sms-tool=y
CONFIG_PACKAGE_luci-i18n-sms-tool-zh-cn=y

# ==========================================
# --- [❌ 剔除组] NAS (Samba/Diskman) ---
# ==========================================
# CONFIG_PACKAGE_luci-app-samba4 is not set
# CONFIG_PACKAGE_luci-i18n-samba4-zh-cn is not set
# CONFIG_PACKAGE_luci-app-diskman is not set
# CONFIG_PACKAGE_luci-i18n-diskman-zh-cn is not set

# ==========================================
# --- [✅ 系统基础组] ---
# ==========================================

# AX210
CONFIG_PACKAGE_kmod-iwlwifi=y
CONFIG_PACKAGE_iwlwifi-firmware-ax210=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_wpad-openssl=y
CONFIG_PACKAGE_luci-app-dawn=y
CONFIG_PACKAGE_luci-i18n-dawn-zh-cn=y

# 5G 协议
CONFIG_PACKAGE_modemmanager=y
CONFIG_PACKAGE_kmod-usb-net-cdc-mbim=y
CONFIG_PACKAGE_luci-proto-qmi=y

# 基础工具
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y

# 系统自带 (保留)
CONFIG_PACKAGE_luci-app-filetransfer=y
CONFIG_PACKAGE_luci-i18n-filetransfer-zh-cn=y
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-i18n-autoreboot-zh-cn=y

# 负载均衡
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_luci-i18n-mwan3-zh-cn=y

# KMS
CONFIG_PACKAGE_luci-app-vlmcsd=y
CONFIG_PACKAGE_luci-i18n-vlmcsd-zh-cn=y

# 基础
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_openssl-util=y

# 语言与皮肤
CONFIG_LUCI_LANG_zh_cn=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-i18n-argon-config-zh-cn=y
