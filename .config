# --- 目标: X86/64 PVE 虚拟机 ---
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
# 生成 PVE 易用的 img.gz 格式
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# --- 1. 核心应用: HomeProxy ---
CONFIG_PACKAGE_luci-app-homeproxy=y
# 确保 sing-box 核心被安装
CONFIG_PACKAGE_sing-box=y

# --- 2. 5G 模组: QModem & 短信 ---
# FUjr 版 QModem (前面脚本已下载)
CONFIG_PACKAGE_luci-app-qmodem=y
# 短信工具
CONFIG_PACKAGE_luci-app-sms-tool=y
# 底层拨号与协议
CONFIG_PACKAGE_comgt=y
CONFIG_PACKAGE_uqmi=y
CONFIG_PACKAGE_umbim=y
CONFIG_PACKAGE_kmod-usb-serial=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y
CONFIG_PACKAGE_luci-proto-qmi=y

# --- 3. 无线网卡驱动 ---
# MediaTek MT7922 (使用 mt7921e 驱动)
CONFIG_PACKAGE_kmod-mt7921e=y
CONFIG_PACKAGE_kmod-mt7921-firmware=y
CONFIG_PACKAGE_linux-firmware-mediatek=y
# Intel AX210 (使用 iwlwifi)
CONFIG_PACKAGE_kmod-iwlwifi=y
CONFIG_PACKAGE_iwlwifi-firmware-ax210=y
CONFIG_PACKAGE_iwlwifi-firmware-ty-a0=y

# --- 4. 蓝牙支持 (如需直通蓝牙) ---
CONFIG_PACKAGE_kmod-bluetooth=y
CONFIG_PACKAGE_kmod-btmtk=y
CONFIG_PACKAGE_kmod-btintel=y

# --- 5. PVE 虚拟机增强 (必选) ---
CONFIG_PACKAGE_qemu-ga=y
CONFIG_PACKAGE_kmod-virtio-net=y
CONFIG_PACKAGE_kmod-virtio-balloon=y
CONFIG_PACKAGE_kmod-virtio-console=y

# --- 6. 系统管理增强 (不臃肿) ---
# 磁盘分区管理
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_parted=y
CONFIG_PACKAGE_smartmontools=y
# 文件传输 SFTP
CONFIG_PACKAGE_openssh-sftp-server=y
# 网页终端
CONFIG_PACKAGE_luci-app-ttyd=y
# CPU 优化
CONFIG_PACKAGE_luci-app-autocore=y
# 基础工具
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_nano=y
